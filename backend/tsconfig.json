{
  "compilerOptions": {
    "typeRoots": [
      "./src/types",
      "./src/types/process-env.d.ts",
      "./node_modules/@types",
      "./typing-stubs"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "src/build/",
    "lib": ["es6"],
    "allowJs": false,
    "rootDir": "src",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/scripts", "node_modules"]
}
