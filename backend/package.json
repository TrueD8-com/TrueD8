  "scripts": {
    "npm-i-g": "npm i npm@latest -g",
    "npm-check-i-g": "npm i npm-check@latest -g",
    "npm-check-u-g": "npm-check $(npm root -g) -y -g",
    "npm-deep-update-g": "npm update --depth 9999 --dev -g",
    "npm-cache-clear": "npm cache clean --force",
    "create-global-node-modules-folder": "mkdir -p \"$(npm config get prefix)/node_modules\"",
    "update-all-modules": "npm run npm-i-g && npm run npm-check-i-g && npm run npm-check-u-g && npm run npm-deep-update-g && npm run npm-cache-clear",
    "debug": "npx nodemon --exec \"node --watch 'src/*.ts' --inspect-brk=0.0.0.0:9229 --require ts-node/register src/index.ts\"",
    "build": "tsc",
    "pm2": "rimraf ./src/build && tsc && NODE_ENV=production pm2 start src/build/index.js -i 4 --no-daemon",
    "pm2:staging": "NODE_ENV=staging pm2 start src/build/index.js --watch -i max",
    "start:dev": "npx nodemon --legacy-watch",
    "start": "node ./src/build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "cross-env NODE_ENV=test TS_NODE_TRANSPILE_ONLY=1 mocha --require ts-node/register --timeout 80000 \"test/**/*.spec.ts\"",
    "test:dev": "jest --watchAll",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  }
}
